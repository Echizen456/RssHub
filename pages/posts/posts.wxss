/* pages/posts/posts.wxss */
/*横向布局  */
.layout_horizontal{
  height: auto;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.divLine{
 background: #EEEDEE;
 width: 100%;
 height: 10rpx;
}
.new_post{
  float: right;
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  /*border-radius: 500px;*/
  width: 100rpx;
  height: 100rpx;
}

.post_list{
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 14rpx;
  margin-bottom: 12rpx;
}
.title{
  font-size: 12pt;
  display: -webkit-box;   
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;      
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.extra_info{
  font-size: 10pt;
  color: lightgray;

}
